{% block sw_product_list_grid_columns %}

    {% parent %}

    <template #column-pricemotionHasPriceRule="{ item }">
        <sw-color-badge :variant="hasPriceRule(item) ? 'success' : 'error'" rounded style="margin: 0" />
    </template>

    <template #column-extensions.pricemotion.lowestPrice="{ item }">
        {{ item.extensions.pricemotion?.lowestPrice|currency('EUR') }}
    </template>

{% endblock %}
