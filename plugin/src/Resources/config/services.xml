<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults autowire="true"/>
        <prototype namespace="Pricemotion\Shopware\" resource="../../*">
            <tag name="monolog.logger" channel="pricemotion"/>
        </prototype>
        <service id="Pricemotion\Shopware\Controller\ApiController" public="true"/>
        <service id="Pricemotion\Shopware\Extension\Content\Product\PricemotionProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>
        <service id="Pricemotion\Shopware\Extension\Content\Product\PricemotionProductDefinition">
            <tag name="shopware.entity.definition" entity="kibo_pricemotion_product"/>
        </service>
        <service id="Pricemotion\Shopware\Command\TestCommand">
            <tag name="console.command"/>
        </service>
        <service id="Pricemotion\Shopware\Subscriber\ConfigSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="Pricemotion\Shopware\MessageQueue\Handler\ConfigureWebhookHandler">
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
