#!/usr/bin/env bash

set -euo pipefail

root="$(cd "$(dirname "$0")/.." && pwd)"
if [[ $root != /data ]]; then
	exec dexec "$0" "$@"
fi

cd "$root/shopware/vendor/shopware/administration/Resources/app/administration"
PROJECT_ROOT="$root/shopware" npm run build

cd "$root/shopware"
bin/console asset:install
